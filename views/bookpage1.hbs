<div class="blog-sidebar-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="post">
                    <div class="col-sm-9">
                        <div class="carousel slide" id="bookStackcarousel" data-ride="carousel" style="background-color: darkgrey">
                            <ol class="carousel-indicators">
                                {{#each book.pictureURLs}}

                                    {{#if (equal_strings @index 0)}}
                                        <li class="active" data-target="#bookStackcarousel" data-slide-to="{{ add_me_together @index }}"></li>

                                    {{else}}
                                        <li data-target="#bookStackcarousel" data-slide-to="{{ @index }}"></li>

                                    {{/if}}


                                {{/each}}
                            </ol>

                            <div class="carousel-inner" role="listbox">
                                {{#each book.pictureURLs}}

                                    {{#if (equal_strings @index 0)}}

                                        <div class="carousel-item active">
                                            <img src="{{ this }}" alt="{{ @index }}" class="d-block img-fluid">
                                        </div>

                                    {{else}}
                                        <div class="carousel-item">
                                            <img src="{{ this }}" alt="{{ @index }}" class="d-block img-fluid">
                                        </div>
                                    {{/if}}
                                {{/each}}
                            </div>

                            <a href="#bookStackcarousel" role="button" data-slide="prev" class="carousel-control-prev">
                                <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a href="#bookStackcarousel" role="button" data-slide="next" class="carousel-control-next">
                                <span aria-hidden="true" class="carousel-control-next-icon"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="title">
                        <p>{{ book.title }}</p>
                    </div>
                    <div class="author">
                        <p> Sold by: {{ soldByThisUser.firstname }} {{ soldByThisUser.lastname }}</p>
                    </div>
                    <h5>Description</h5>
                    <hr>
                    <p class="intro">{{ book.description }}</p>
                </div>
            </div>

            <div class="col-lg-3 sidebar">
                <div class="updates">
                    <strong>Details</strong>
                    <p>Subject: {{ book.subject }}</p>
                    <p>Price: ${{ book.price }}</p>
                    <p>{{ add_me_together 3 1 }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

