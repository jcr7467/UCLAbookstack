<link rel="stylesheet" href="/css/chat.css">

<div class="chat-wrapper">
    <div class="chat-container">
        <header class="chat-header">
            <h1> Messages with {{ messagesWith }}</h1>
        </header>

        <main class="chat-main">
            <div class="chat-sidebar">
                <h3><i class="fas fa-comments"></i> Room Name:</h3>
                <h2 id="room-name"></h2>
                <h3><i class="fas fa-users"></i> Users</h3>
                <ul id="users"></ul>
            </div>
            <div class="chat-messages">
                {{#each messages}}

                    <div class="message">
                        <p class="meta">{{ this.msgSentBy }} <span>October</span> <span>12</span></p>
                        <p class="text">
                            {{ this.text }}
                        </p>
                    </div>
                {{/each}}
            </div>
        </main>

        <div class="chat-form-container">
            <form id="chat-form">
                <input type="text"  value="{{ currentUserObject._id }}" id="myUserID">
                <input type="text"  value="{{ messagesWith }}" id="theirUserID">
                <input
                        id="msg"
                        type="text"
                        placeholder="Enter Message"
                        required
                        autocomplete="off"
                />
                <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
            </form>

        </div>
    </div>
</div>

