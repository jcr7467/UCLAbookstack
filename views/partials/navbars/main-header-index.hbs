<!-- //header style Two -->
<header id="headerTwo" style="padding-bottom: 20px" class="header-area header-two header-desktop">


    <div class="header-mini bg-top-bar">
        <div class="container">
            <div class="row align-items-center">


                <div class="col-12 col-md-12">
                    <div class="pro-header-options">

                        {{#if (user_is_logged_in currentUser)}}
                            <div class="dropdown"><a class="pro-avatar">Hi {{currentUserObject.firstname}}!</a></div>

                        {{/if}}


                        <div class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle">
                                Account
                            </a>
                            <div class="dropdown-menu">
                                {{#if (user_is_logged_in currentUser)}}
                                    <a class="dropdown-item" href="/profile">Profile</a>
                                    <a class="dropdown-item" href="/signout">Sign out</a>
                                {{else}}
                                    <a class="dropdown-item" href="/signin">Sign In</a>
                                    <a class="dropdown-item" href="/signup">Sign Up</a>
                                {{/if}}



                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="header-maxi bg-header-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-12 col-lg-2">
                    <a href="/" class="logo" data-toggle="tooltip" data-placement="bottom"  >
                        <img class="img-fluid" src="/images/logo/logo-full-blackblue.svg"  alt="logo here">
                    </a>
                </div>

                <div class="col-12 col-sm-8 nav-start">

                </div>
                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                    <ul class="pro-header-right-options">

                        <li class="dropdown">

                            <button type="button" id="dropdownSearch2" class="btn dropdown-toggle" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
                                <i class="fas fa-search"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownSearch2">
                                <form method="get" action="search/1"> <!-- search/1 for the first page of whatever we search -->
                                    <div class="pt-col">
                                        <input autocomplete="off" type="text" name="query" class="pt-search-input" placeholder="Search products...">
                                        <button class="btn pt-btn-search" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>

                        </li>
                        {{#if (user_is_logged_in currentUser)}}
                        <li>
                            <a href="/profile" class="btn" data-toggle="tooltip" data-placement="bottom" title="My Books">
                                <i class="fas fa-book"></i>

                            </a>
                        </li>
                        <li>
                            <a href="/conversations" class="btn" data-toggle="tooltip" data-placement="bottom" title="Messages">
                                <i class="fas fa-comment"></i>

                            </a>
                        </li>

                            <li>
                                <a href="/profile/uploadbook" class="btn" data-toggle="tooltip" data-placement="bottom" title="Upload">
                                    <i class="fas fa-upload"></i>

                                </a>
                            </li>
                        </ul>
                        {{/if}}
                </div>
            </div>
        </div>
    </div>
</header>