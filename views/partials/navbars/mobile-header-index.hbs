<!-- //Mobile Header -->
<header id="headerMobile" class="header-area header-mobile">


    <div class="header-maxi bg-header-bar ">
        <div class="container">

            <div class="row align-items-center">
                <div class="col-2 pr-0">
                    <div class="navigation-mobile-container">
                        <a href="javascript:void(0)" class="navigation-mobile-toggler">
                            <span class="fas fa-bars"></span>
                        </a>
                        <nav id="navigation-mobile">

                            {{#if (user_is_logged_in currentUser) }}
                                <div class="logout-main">
                                    <div class="welcome">
                                        <span>Welcome&nbsp;{{currentUserObject.firstname}} !</span>
                                    </div>
                                    <div class="logout">
                                        <a href="/signout" class="">Logout</a>
                                    </div>

                                </div>
                            {{else}}
                                <div class="logout-main">
                                    <div class="welcome">
                                        <span>Welcome&nbsp;Guest !</span>
                                    </div>


                                </div>
                            {{/if}}


                            <a href="/" class="main-manu btn ">
                                Home
                            </a>
                            {{#if (user_is_logged_in currentUser)}}
                            <a href="/profile" class="main-manu btn ">
                                Profile
                            </a>
                            <a href="/profile/settings" class="main-manu btn ">
                                Settings
                            </a>
                            {{else}}
                            <a href="/signin" class="main-manu btn ">
                                Sign In
                            </a>
                            <a href="/signup" class="main-manu btn ">
                                Sign Up
                            </a>
                            {{/if}}

                        </nav>
                    </div>

                </div>



                <div class="col-8">
                    <a href="/" class="logo" data-toggle="tooltip" data-placement="bottom" title="" >
                        <img class="img-fluid" src="/images/logo/logo-full-blackblue.png" alt="logo here">
                    </a>
                </div>
                {{#if (user_is_logged_in currentUser) }}
                <div class="col-2 pl-0">
                    <div class="cart-dropdown dropdown">
                        <a class="cart-dropdown-toggle" href="/conversations" role="button"  aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-comment" aria-hidden="true"></i>
                        </a>

                    </div>
                </div>
                {{/if}}


            </div>
        </div>
    </div>




    <div class="header-navbar bg-menu-bar">
        <div class="container">
            <form class="form-inline" method="get" action="/search">
                <div class="search-field-module">
                    <div class="search-field-select" >
                        <select name="subject" class="form-control">
                            <option selected value="All">All Categories</option>
                            <option value="Art">Art
                                &nbsp;</option>
                            <option value="Business and Economics">Business and Economics&nbsp;</option>
                            <option value="Cooking">Cooking&nbsp;</option>
                            <option value="English">English&nbsp;</option>
                            <option value="Foreign Language">Foreign Language&nbsp;</option>
                            <option value="Health and Fitness">Health and Fitness&nbsp;</option>
                            <option value="History">History&nbsp;</option>
                            <option value="Law and Political Science">Law and Political Science&nbsp;</option>
                            <option value="Mathematics">Mathematics&nbsp;</option>
                            <option value="Medical">Medical&nbsp;</option>
                            <option value="Performing Arts">Performing Arts&nbsp;</option>
                            <option value="Philosophy and Social Science">Philosophy and Social Science&nbsp;</option>
                            <option value="Science">Science&nbsp;</option>
                            <option value="Technology and Engineering">Technology and Engineering&nbsp;</option>
                            <option value="Other">Other&nbsp;</option>
                        </select>
                    </div>
                    <div class="search-field-wrap">
                        <input  name="query" type="search" placeholder="Search Products..." data-toggle="tooltip" data-placement="bottom" title="search item">
                        <button class="btn btn-secondary swipe-to-top" data-toggle="tooltip" data-placement="bottom" title="Search Products">
                            <i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</header>