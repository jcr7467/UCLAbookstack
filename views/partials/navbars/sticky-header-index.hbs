<!-- //Sticky Header -->
<header id="stickyHeader" class="header-area header-sticky d-none" >
    <div class="header-maxi bg-sticky-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-12 col-lg-2">
                    <a href="/" class="logo" data-toggle="tooltip" data-placement="bottom"  >
                        <img class="img-fluid" src="/images/logo/logo-full-blackblue.png"  alt="logo here">
                    </a>
                </div>

                <div class="col-12 col-sm-8" style="position:static;">

                </div>
                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                    <ul class="pro-header-right-options">

                        <li class="dropdown">

                            <button type="button" id="dropdownSearch" class="btn dropdown-toggle" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
                                <i class="fas fa-search"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownSearch">
                                <form method="get" action="/search/1"> <!-- /search/1 to indicate the first page of whatever we search -->
                                    <div class="search-field-module">
                                        <input  autocomplete="off" type="search" placeholder="Search Products..." data-toggle="tooltip" data-placement="bottom" name="query" title="search item">
                                        <button class="btn" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>

                        </li>
                        {{#if (user_is_logged_in currentUser)}}
                        <li>
                            <a href="/profile" class="btn" data-toggle="tooltip" data-placement="bottom" title="My Books">
                                <i class="fas fa-book"></i>
                            </a>
                        </li>

                        <li>
                            <a href="/conversations" class="btn" data-toggle="tooltip" data-placement="bottom" title="Messages">
                                <i class="fas fa-comment"></i>
                            </a>
                        </li>

                        <li>
                            <a href="/profile/uploadbook" class="btn" data-toggle="tooltip" data-placement="bottom" title="Upload">
                                <i class="fas fa-upload"></i>
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>