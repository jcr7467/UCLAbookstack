    <nav aria-label="breadcrumb">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">
                    <span class="header-text">Home</span>
                    </a></li>
                <li class="breadcrumb-item active" aria-current="page">Profile</li>
            </ol>
        </div>
    </nav>
</div>
<section class="pro-content profile-content">
    <div class="container ">
        <div class="row">
            <div class="pro-heading-title">
                <h1>
                    Profile Page
                </h1>
            </div>
        </div>
        <div class="row">

            <div class="col-12">

                <div class="media">
                    <img src="{{ currentUserObject.profilePictureURL }}" alt="avatar">
                    <div class="media-body">
                        <h5 class="mt-0">{{ currentUserObject.firstname }}</h5>
                        <p>E-mail: <a href="mailto:{{ currentUserObject.email }}">{{ currentUserObject.email }}</a></p>

                    </div>
                </div>

            </div>
        </div>
        <div class="row ">
            {{> profile_menu }}
            <div class="col-12 col-lg-9 ">
                <form action="/profile/settings" method="post" name="general-form">
                    <div class="row">

                        <div class="col-12 col-md-7">
                            <h5>Update Profile</h5>
                            <br>
                            <p style="font-size: 10px"> First Name</p>
                            <div class="from-group row mb-4 pt-3">


                                <div class="input-group col-12">

                                    <input autocomplete="off" type="text" value="{{ currentUserObject.firstname }}" name="firstname" class="form-control" id="inlineFormInputGroup0" placeholder="Enter Your First Name">
                                </div>
                            </div>

                            <p style="font-size: 10px"> Last Name</p>
                            <div class="from-group row mb-4">

                                <div class="input-group col-12">

                                    <input autocomplete="off" type="text" value="{{ currentUserObject.lastname }}" class="form-control" id="inlineFormInputGroup1" name="lastname" placeholder="Enter Your Last Name">
                                </div>
                            </div>

                            <p style="font-size: 10px"> Email</p>
                            <div class="from-group row mb-4">


                                <div class="input-group col-12">

                                    <br>
                                    <input autocomplete="off" type="text" name="email" value="{{ currentUserObject.email }}" class="form-control" id="inlineFormInputGroup2"  placeholder="Enter Your Email">
                                </div>
                            </div>







                            <button type="submit" class="btn btn-secondary mt-3 swipe-to-top">Update</button>

                        </div>
