<form method="POST" action="/signup">
    <div class="form-field">
        <input type="text" placeholder="Full Name" name="name" required="required" />
    </div>
    <div class="form-field">
        <input type="email" placeholder="Email" name="email" required="required" />
    </div>
    <div class="form-field">
        <input type="password" placeholder="Password" name="password" minlength="6" required="required" />
    </div>
    <div class="form-field">
        <label class="terms"></label><input id="termsCheckbox" type="checkbox" name="terms" required="required" /> I've read & agree with the<a href="/termsOfUse" target="_blank"> Terms</a> and<a href="/privacyPolicy" target="_blank"> Privacy</a>.
    </div>
    <div class="form-field" id="formfilt">
        <input type="text" name="formfilt">
    </div>
    <div class="form-action">
        <input class="btn-shadow btn-shadow-primary" id="signupButton" type="submit" value="Sign Up" />
    </div>
    <div class="form-bottom">Already have an account?<a href="/signin">Sign in</a></div>
</form>